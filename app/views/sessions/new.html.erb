<section>
  <h2 class="ui center aligned icon header">
    <i class="circular orange key icon"></i>
  </h2>
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_with scope: :session, url: login_path, class: "ui form", local: true do |f|%>
          <div class="field">
            <%= f.label :username %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: 'Username', required: true %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: 'Password', required: true %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit 'Log in', class: 'ui fluid orange submit button' %>
        <% end %>
      </div>
      <div class="middle aligned column">
        <%= link_to signup_path do %>
          <div class="ui big orange button">
            <i class="signup icon"></i>
            Sign Up
          </div>
        <% end %>
      </div>
    </div>
    <div class="ui vertical divider">Or</div>
  </div>
</section>
