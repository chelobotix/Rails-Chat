<% if obj.errors.any?  %>
  <div class="ui icon message">
    <i class="red exclamation icon"></i>
    <div class="content">
      <p class="header">The following errors prevented the new <%= obj.class %> being created:</p>
      <ul class="">
        <% obj.errors.full_messages.each do |message|  %>
          <li><%= message %></li>
        <% end  %>
      </ul>
    </div>
  </div>
<% end  %>
